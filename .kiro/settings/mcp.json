{
  "_comment": "MCP Template - Base configuration loaded for all builds. Voice is always equipped.",
  "mcpServers": {
    "piper-tts": {
      "command": "dart",
      "args": [
        "/Volumes/shared_code/skyrim/piper/piper_mcp_server.dart"
      ],
      "purpose": "Voice MCP - The rogue always speaks",
      "disabled": false,
      "autoApprove": [
        "speak"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/wizard/artifacts",
        "/home/wizard/spellbook"
      ],
      "purpose": "Create and manipulate artifacts - the wizard's primary manifestation ability",
      "spells_enabled": [
        "read_file - Scry existing artifacts",
        "write_file - Manifest new artifacts",
        "list_directory - Survey the arcane library",
        "create_directory - Establish new domains"
      ]
    },
    "shell": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-shell"
      ],
      "purpose": "Shell commands - Daggers of Shell Commands",
      "autoApprove": [
        "execute_command"
      ],
      "disabled": false
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github@latest"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "purpose": "GitHub API - Sigil of GitHub",
      "autoApprove": [
        "create_repo",
        "list_repos",
        "get_repo",
        "push_code",
        "create_issue",
        "list_issues",
        "get_issue",
        "create_pull_request",
        "list_pull_requests",
        "get_pull_request"
      ],
      "disabled": false
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "purpose": "Persist context across sessions - the wizard's ability to remember incantations",
      "spells_enabled": [
        "store_memory - Bind knowledge to persistence",
        "retrieve_memory - Recall ancient context",
        "list_memories - Index the mind palace"
      ]
    },
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ],
      "purpose": "Channel external knowledge - the wizard reaches beyond their domain",
      "spells_enabled": [
        "fetch_url - Summon distant texts",
        "fetch_html - Parse the web's grimoire"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "purpose": "Manifest visual artifacts - the wizard's illusion school",
      "spells_enabled": [
        "screenshot - Capture reality",
        "navigate - Traverse the web plane",
        "interact - Manipulate distant interfaces"
      ],
      "optional": true,
      "unlock_level": 5
    }
  }
}
